# =============================================================================
# Dinheirologia Content Agent - Environment Variables
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to version control.
# =============================================================================

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Unsplash API (get yours at https://unsplash.com/developers)
UNSPLASH_ACCESS_KEY=your-unsplash-access-key-here

# Output paths
# Path to the Next.js content directory (relative to agent/ or absolute)
CONTENT_OUTPUT_DIR=../site/src/content/artigos

# Manual input JSON file path
MANUAL_INPUT_FILE=./manual_input.json

# Agent behavior
# How many RSS articles to process per run (per feed)
MAX_ARTICLES_PER_FEED=3

# Minimum article length in characters to consider for processing
MIN_ARTICLE_LENGTH=300

# Claude model to use
CLAUDE_MODEL=claude-opus-4-6

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Whether to save raw fetched articles for debugging (true/false)
SAVE_RAW_ARTICLES=false

# State file to track already-processed article URLs
STATE_FILE=./agent_state.json

# Authenticated sources (optional â€” leave blank to skip)
FT_EMAIL=
FT_PASSWORD=
GAVEKAL_EMAIL=
GAVEKAL_PASSWORD=
